<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.john.cils.mapper.CilsProductSpuMapper">

    <resultMap type="CilsProductSpu" id="CilsProductSpuResult">
        <result property="id" column="id"/>
        <result property="spuCode" column="spu_code"/>
        <result property="productName" column="product_name"/>
        <result property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="mainImage" column="main_image"/>
        <result property="isAudit" column="is_audit"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectCilsProductSpuVo">
        select t1.id,
               t1.spu_code,
               t1.product_name,
               t1.category_id,
               t2.category_name,
               t1.main_image,
               t1.is_audit,
               t1.remark,
               t1.create_time,
               t1.update_time
        from cils_product_spu t1
                 left join cils_category t2 on t1.category_id = t2.category_id
    </sql>

    <select id="selectCilsProductSpuList" parameterType="CilsProductSpu" resultMap="CilsProductSpuResult">
        <include refid="selectCilsProductSpuVo"/>
        <where>
            <if test="spuCode != null  and spuCode != ''">and t1.spu_code = #{spuCode}</if>
            <if test="productName != null  and productName != ''">and t1.product_name like concat('%', #{productName},
                '%')
            </if>
            <if test="categoryId != null ">and t1.category_id = #{categoryId}</if>
            <if test="isAudit != null ">and t1.is_audit = #{isAudit}</if>
            and t1.del_flag = 0
        </where>
    </select>

    <select id="selectCilsProductSpuById" parameterType="Long" resultMap="CilsProductSpuResult">
        <include refid="selectCilsProductSpuVo"/>
        where t1.id = #{id}
    </select>

    <insert id="insertCilsProductSpu" parameterType="CilsProductSpu" useGeneratedKeys="true" keyProperty="id">
        insert into cils_product_spu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="spuCode != null and spuCode != ''">spu_code,</if>
            <if test="productName != null and productName != ''">product_name,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="mainImage != null">main_image,</if>
            <if test="isAudit != null">is_audit,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="spuCode != null and spuCode != ''">#{spuCode},</if>
            <if test="productName != null and productName != ''">#{productName},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="mainImage != null">#{mainImage},</if>
            <if test="isAudit != null">#{isAudit},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateCilsProductSpu" parameterType="CilsProductSpu">
        update cils_product_spu
        <trim prefix="SET" suffixOverrides=",">
            <if test="spuCode != null and spuCode != ''">spu_code = #{spuCode},</if>
            <if test="productName != null and productName != ''">product_name = #{productName},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="mainImage != null">main_image = #{mainImage},</if>
            <if test="isAudit != null">is_audit = #{isAudit},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="deleteCilsProductSpuById" parameterType="Long">
        update cils_product_spu
        set del_flag    = '2',
            update_time = sysdate()
        where id = #{id}
    </update>

    <update id="deleteCilsProductSpuByIds" parameterType="String">
        update cils_product_spu set del_flag = '2', update_time = sysdate() where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>
